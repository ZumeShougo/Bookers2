<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= @book.errors.count %> error prohibited this book from being saved
  <%= message %>
 </div>
<% end %>

<div class = "container">
 <%= render'books/template',user:@user , book:@book %>
 <div class = "col-xs-9">
  <h2>Books</h2>
  <table class = "table">
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
   <%= @books.each do |book| %>
   <tr>
    <td>
     <%= link_to user_path(book.user_id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill,20,20, fallback:"no_image",size:'20x20',fomat:"no_image.jpg" %>
     <% end %>
    </td>
    <td>
     <%= link_to book.title ,book_path(book.id) %>
    </td>
    <td>
     <%= book.opinion %>
    </td>
   </tr>
   <% end %>
  </table>
 </div>
</div>